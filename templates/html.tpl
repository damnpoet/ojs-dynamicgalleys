<div id="full_article" class="article_content"><div class="article_section"><h3 align="right">{$section->getLocalizedIdentifyType()}</h3></div><p class="es_article_title" align="left">{$article->getArticleTitle()}</p>{if $article->getTitle("en_US")}<p class="en_article_title">{$article->getTitle("en_US")}</p>{/if}<div class="authors">{assign var='count' value=1}{foreach from=$authors item=author}	{$author->getFullName()},<a href="#author{$count}"><sup>{$count}</sup></a>	{assign var='count' value=$count+1}{/foreach}</div>{assign var='count' value=1}<div class="affiliations">{foreach from=$authors item=author}{if $author}<b>{$count}</b>&nbsp;{$author->getAuthorBiography()} &nbsp;{/if}{assign var='count' value=$count+1}{/foreach}</div><div class="article_info" xpathlocation="noSelect"><p>{$articleDataHtml}</p></div>{if !$section->getAbstractsNotRequired()}<div class="abstract_block" xpathlocation="noSelect">    {if $article->getAbstract($locale) != ""}        <p class="abstract_header"><strong>RESUMEN</strong></p>        <div class="abstract_content" align="justify">{$article->getAbstract($locale)}</div>    {/if}    {if $keywords}        {assign var='count' value=1}        <p><em>Palabras clave</em>: {foreach from=$keywords item=keyword}{$keyword}{if $count < $keywordsCount};{/if}{assign var='count' value=$count+1}{/foreach}</p>    {/if}    {if $article->getAbstract("en_US") != ""}        <p class="abstract_header"><strong>ABSTRACT</strong></p>        <div class="abstract_content" align="justify">{$article->getAbstract("en_US")}</div>    {/if}    {if $otherKeywords}        {assign var='count' value=1}        <p align="left"><em>Key words</em>: {foreach from=$otherKeywords item=keyword}{$keyword}{if $count < $otherKeywordsCount};{/if}{assign var='count' value=$count+1}{/foreach}</p>    {/if}</div>{/if}<div class="article_body" xpathlocation="noSelect" onload="setupZoom()"><p align="justify">{$body}</p></div><div class="article_references" xpathlocation="noSelect"> <a name="ref-list"></a>{if $refCount > 0}<a name="citationsLinks"></a><p class="article_references_header"><span style="font-size: small;"><strong>REFERENCIAS BIBLIOGR&Aacute;FICAS</strong></span></p><ol class="article_references" xpathlocation="noSelect">{assign var='refCount' value=1}{foreach from=$citations item=citation}<li class="article_reference" xpathlocation="noSelect">{$citation->getCitation()}&nbsp;<a target="_blank" href="http://scholar.google.com/scholar?q=%22{$citation->getTitle()|urlencode}%22&hl=en&lr=&btnG=Search">[Buscar en Google Scholar]</a></li>{assign var='refCount' value=$refCount+1}{/foreach}</ol>{/if}</div><br /></div>